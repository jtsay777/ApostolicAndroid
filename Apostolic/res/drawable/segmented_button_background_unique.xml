<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6d6d6d"
                android:endColor="#000000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#38393a" />
            <!-- Don't know why I should specify bottomRight for bottomLeft -->
            <!-- android:radious is needed for the not-rounded corners. -->
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6d6d6d"
                android:endColor="#000000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#38393a" />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#81838a"
                android:endColor="#222732"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#38393a" />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</selector>